{
	"name": "functions",
	"scripts": {
		"lint": "tslint --project tsconfig.json",
		"build": "npm run compile",
		"compile": "tsc -d",
		"serve": "npm run build && firebase serve --only functions",
		"shell": "npm run build && firebase functions:shell",
		"start": "npm run shell",
		"deploy": "firebase deploy --only functions",
		"logs": "firebase functions:log",
		"copy-deps": "cpx \"*{package.json,package-lock.json,yarn.lock}\" \"dist\" -C",
		"install-deps": "cd \"dist\" && npm i",
		"emulate": "firebase emulators:start",
		"test": "firebase emulators:exec jest",
		"test:stress": "firebase emulators:exec \"jest ./functions/tests/stress\""
	},
	"engines": {
		"node": "10"
	},
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"dependencies": {
		"cors": "^2.8.5",
		"dayjs": "^1.8.20",
		"express": "^4.17.1",
		"firebase-admin": "^8.6.0",
		"firebase-functions": "^3.3.0"
	},
	"devDependencies": {
		"@firebase/testing": "^0.16.11",
		"@types/cors": "^2.8.6",
		"@types/jest": "^25.1.3",
		"cpx": "^1.5.0",
		"firebase-functions-test": "^0.1.6",
		"jest": "^25.1.0",
		"ts-jest": "^25.2.1",
		"tslint": "^5.12.0",
		"typescript": "^3.2.2"
	},
	"private": true
}
